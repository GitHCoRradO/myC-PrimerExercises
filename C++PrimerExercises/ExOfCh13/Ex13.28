class TreeNode {
public:
	TreeNode() : left(nullptr), right(nullptr) { }
	TreeNode(const TreeNode &) = delete;
	TreeNode &operator=(const TreeNode&) = delete;
private:
	string value;
	int count;
	TreeNode *left;
	TreeNode *right;
};

